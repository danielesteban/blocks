  },
  "dependencies": {
    "colorsys": "^1.0.22",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "fastnoisejs": "^1.0.1",
    "helmet": "^4.1.1",
    "node-fetch": "^2.6.1",
    "pngjs": "^5.0.0",
    "protobufjs": "^6.10.1",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2"
  }
}
