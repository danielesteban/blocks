  "license": "MIT",
  "private": true,
  "pre-commit": {
    "run": "lint",
    "silent": true
  },
  "scripts": {
    "compile:protocol": "pbjs -t static-module -w es6 -o client/core/protocol.js --no-comments server/messages.proto",
